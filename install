#!/bin/bash

echo "Checking if python exists"
if command -v python3 > /dev/null 2>&1; then
    py=$(which python3)
    echo "Using python3"
else
    if python --version | grep -q 3.; then
        py=$(which python)
        echo "Using python"
    else
        echo "Please install Python3 or 3.11 manually."
        exit 1
    fi
fi

echo "Installing required components"
$py -m venv venv
source venv/bin/activate
pip install --upgrade streamlink aiohttp aiofiles orjson
deactivate
echo "Required components installation completed!"

echo "Starting configuration"
bash settings
echo "Configuration completed!"
echo "If you want to reconfigure, please run the \"settings\" script directly"
exit 0
